<% if user_signed_in? %>
  <%= "Signed in as:" %>
  <div class="username"><%= "#{current_user.username}" %> </div>
  <div class="signout_button"><%= button_to "sign out", destroy_user_session_path, method: :delete %></div>
<% else %>
  <div class="signin-up-link"><%= link_to "Sign in", new_user_session_path %> or <%= link_to "Sign up", new_user_registration_path %></div>
<% end %>

